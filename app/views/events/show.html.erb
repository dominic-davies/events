<div class="container">
    <div class="card my-5">
        <img class="card-img-top"><%= image_for(@event)%>
        <div class="card-body">
            <h3 class="card-title"><%=@event.name %></h3>
            <p class="card-text">When: <%= @event.location %></p>
            <p class="card-text">Price: <%= format_price(@event) %></p>
            <p class="card-text">Capacity: <%= pluralize(@event.capacity, 'seat') %></p>
            <p class="card-text"><%= @event.description %></p>
            <%= link_to "Edit", edit_event_path(@event), class: "btn btn-warning" %>
            <%= link_to "Delete", event_path(@event), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
        </div>
        <div class="card-footer text-muted">
            <%= link_to "Register", new_event_registration_path(@event), class: "btn btn-success" %>
            <%= link_to "Who's Registered?", event_registrations_path(@event), class: "btn btn-link" %>
        </div>
    </div>
</div>