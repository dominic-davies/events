<div class="jumbotron">
  <div class="container">
    <h1 class="display-4">Registration for <%= link_to @event.name, @event %></h1>
    <%# <p class="lead">Here's a list of everyone who has registered.</p>
    <hr class="my-4">
    <a class="btn btn-primary btn-lg" href="#" role="button">View all events</a> %>
  </div>
</div>

<%= form_for([@event, @registration]) do |f| %>
<div class="container">
    <form>
        <div class="form-group">    
            <%= f.label :name %> <br>
            <%= f.text_field :name, size: 40, autofocus: true %>
        </div>
        <div class="form-group">  
            <%= f.label :email %> <br>
            <%= f.text_field :email, size: 40 %>
        </div>
        <div class="form-group"> 
            <label for="how_heard_form"><%= f.label :how_heard %></label>
                    <%= f.select :how_heard,
                            Registration::HOW_HEARD_OPTIONS,
                            prompt: "Pick one",
                            class: "form-control" %>
        </div>
            <%= f.submit %>  
            <%= link_to "Cancel", events_path %>    
    </form>
</div>    
<% end %>